{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "impl/reference/src",
    "outDir": "impl/reference/dist",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "types": ["node"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ref/*": ["impl/reference/src/*"]
    }
  },
  "include": ["impl/reference/src"]
}
